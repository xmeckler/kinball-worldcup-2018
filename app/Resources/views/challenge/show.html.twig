{% extends 'base.html.twig' %}

{% block body %}
    <h1>Challenge</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ challenge.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if challenge.date %}{{ challenge.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{% if challenge.time %}{{ challenge.time|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ challenge.place }}</td>
            </tr>
            <tr>
                <th>Winner</th>
                <td>{{ challenge.winner }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('challenge_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('challenge_edit', { 'id': challenge.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <h1 style="text-align: center;">Challenges list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Time</th>
                <th>Place</th>
                <th>Phase</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for challenge in challenges %}
            <tr>
                <td><a href="{{ path('challenge_show', { 'id': challenge.id }) }}">{{ challenge.id }}</a></td>
                <td>{% if challenge.date %}{{ challenge.date|date('Y-m-d') }}{% endif %}</td>
                <td>{% if challenge.time %}{{ challenge.time|date('H:i:s') }}{% endif %}</td>
                <td>{{ challenge.place }}</td>
                <td>{{ challenge.phase }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('challenge_show', { 'id': challenge.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('challenge_edit', { 'id': challenge.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul style="list-style-type: none; text-align: center;">
        <li>
            <a class="btn btn-primary" href="{{ path('challenge_new') }}">Create a new challenge</a>
        </li>
    </ul>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Player</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ player.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ player.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ player.lastName }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ player.age }}</td>
            </tr>
            <tr>
                <th>Nickname</th>
                <td>{{ player.nickName }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ player.picture }} <img src="{{ asset('uploads/playersPictures' ~ player.picture) }}" alt="{{ player.firstName }} {{ player.lastName }}" /></td>
            </tr>
        </tbody>
    </table>

<div style="text-align: center;">

    <ul style="list-style-type: none;">
        <li>
            <a href="{{ path('player_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('player_edit', { 'id': player.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>

</div>
{% endblock %}

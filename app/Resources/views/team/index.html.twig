{% extends 'base.html.twig' %}

{% block body %}
    <h1 style="text-align: center;">Teams list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Country</th>
                <th>Teamname</th>
                <th>Flagimg</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td><a href="{{ path('team_show', { 'id': team.id }) }}">{{ team.id }}</a></td>
                <td>{{ team.country }}</td>
                <td>{{ team.teamName }}</td>
                <td>{{ team.flagImg }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('team_show', { 'id': team.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('team_edit', { 'id': team.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul style="list-style-type: none; text-align: center;">
        <li>
            <a class="btn btn-primary" href="{{ path('team_new') }}">Create a new team</a>
        </li>
    </ul>
{% endblock %}

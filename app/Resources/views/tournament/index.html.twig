{% extends 'base.html.twig' %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/tournament/tournament.css') }}">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
        <link href='https://fonts.googleapis.com/css?family=Holtwood+One+SC' rel='stylesheet' type='text/css'>
        <link href='https://fonts.googleapis.com/css?family=Kaushan+Script|Herr+Von+Muellerhoff' rel='stylesheet' type='text/css'>
        <link href='https://fonts.googleapis.com/css?family=Abel' rel='stylesheet' type='text/css'>
        <link href='https://fonts.googleapis.com/css?family=Istok+Web|Roboto+Condensed:700' rel='stylesheet' type='text/css'>

        <title>Kinball Tournament</title>
    </head>
    <body>


    {{ dump(challenges) }}
    <section id="bracket">
        <div class="container">
            <div class="split split-one">
                <div class="round round-one current">
                    <div class="round-details">Start<br/><span class="date">Orleans</span></div>
                            {% for challenge in challenges %}
                                {% if challenge.phase == 'Start' %}
                                <ul class="matchup">
                                    <li class="team team-top">{{ challenge.greyTeam.teamName }}{% if challenge.greyTeam.teamName == challenge.winnerTeam.teamName %}<span class="score">Win</span>{% endif %}</li>
                                    <li class="team team-bottom">{{ challenge.blueTeam.teamName }}{% if challenge.blueTeam.teamName == challenge.winnerTeam.teamName %}<span class="score">Win</span>{% endif %}</li>
                                    <li class="team team-bottom">{{ challenge.blackTeam.teamName }}{% if challenge.blackTeam.teamName == challenge.winnerTeam.teamName %}<span class="score">Win</span>{% endif %}</li>
                                </ul>
                                {% endif %}
                            {% endfor %}
                </div>  <!-- END ROUND ONE -->

                <div class="round round-two">
                    <div class="round-details">Semi-final<br/><span class="date">Orleans</span></div>
                    {% for challenge in challenges %}
                        {% if challenge.phase == 'Semi-final' %}
                            <ul class="matchup" >
                                <li class="team team-top">{{ challenge.greyTeam.teamName }}{% if challenge.greyTeam.teamName == challenge.winnerTeam.teamName %}<span class="score">Win</span>{% endif %}</li>
                                <li class="team team-bottom">{{ challenge.blueTeam.teamName }}{% if challenge.blueTeam.teamName == challenge.winnerTeam.teamName %} <span class="score">Win</span>{% endif %}</li>
                                <li class="team team-bottom">{{ challenge.blackTeam.teamName }}{% if challenge.blackTeam.teamName == challenge.winnerTeam.teamName %}<span class="score">Win</span>{% endif %}</li>
                            </ul>
                        {% endif %}
                    {% endfor %}
                </div>  <!-- END ROUND TWO -->

                <div class="round round-three">
                    <div class="round-details">Final<br/><span class="date">Orleans</span></div>
                    {% for challenge in challenges %}
                        {% if challenge.phase == 'Final' %}
                            <ul class="matchup" >
                                <li class="team team-top">{{ challenge.greyTeam.teamName }}{% if challenge.greyTeam.teamName == challenge.winnerTeam.teamName %}<span class="score">Win</span>{% endif %}</li>
                                <li class="team team-bottom">{{ challenge.blueTeam.teamName }}{% if challenge.blueTeam.teamName == challenge.winnerTeam.teamName %} <span class="score">Win</span>{% endif %}</li>
                                <li class="team team-bottom">{{ challenge.blackTeam.teamName }}{% if challenge.blackTeam.teamName == challenge.winnerTeam.teamName %} <span class="score">Win</span>{% endif %}</li>
                            </ul>
                        {% endif %}
                    {% endfor %}
                </div>  <!-- END ROUND THREE -->
            </div>
            <div class="champion">
                <div class="final">
                    <i class="fa fa-trophy"></i>
                    <div class="round-details">championship <br/><span class="date">March 30 - Apr. 1</span></div>
                    <ul class ="matchup championship">
                        <li class="team team-top">&nbsp;<span class="vote-count">&nbsp;</span></li>
                        <li class="team team-bottom">&nbsp;<span class="vote-count">&nbsp;</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </section>


{% endblock %}